body
  box-sizing border-box
  margin 0
  padding  0
  background  whitesmoke

.wrap
  display: flex
  flex 1 1 auto
  flex-wrap wrap
.carousel
  margin 10px auto
  box-sizing border-box
  position  relative 
  width  1024px
  height  768px
  border  5px solid #222 
  overflow  hidden 
  user-select  none 
  cursor  pointer 

.carousel__display
  position  absolute
  height 340px
  width 2000%
  transition .3s

.item__carousel
  cursor pointer
  float left
  height auto
  width  1024px
  animation-name  fade
  animation-duration  3.5s 


.fade
  animation-name  fade
  animation-duration  3.5s

@keyframes fade {
  from {
    opacity  0.5 
  }

  to {
    opacity  1 
  }
}

.wrap-indicators
  position absolute
  display flex
  width  100% 
  bottom  10px 
  margin  0 
  padding  10px 20px 0 10px 
.dot
  cursor  pointer 
  height  15px 
  width  15px 
  margin  0 2px 
  background-color  #bbb 
  border-radius  50% 
  display  inline-block 
  transition  background-color 0.6s ease 


.active, .dot hover
  background-color  #717171 
